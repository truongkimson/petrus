@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<h1 class="pl-3">@ViewData["Title"]</h1>
<br />
@{
    if (User.Identity.IsAuthenticated)
    {
        <form class="col-12 col-md-12 pb-1 text-left font-roboto form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="details-button btn btn-primary btn-square btn-lg">Click here to Logout</button>
        </form>
    }
    else
    {
        <p>You have successfully logged out of the application.</p>
    }
}
