@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="px-1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
}

else
{
    <a class="px-1" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <text>|</text>
    <a class="px-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
}


