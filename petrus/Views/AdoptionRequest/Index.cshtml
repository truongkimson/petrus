@model IEnumerable<AdoptionListing>
@{
    List<AdoptionRequest> adoptionRequests = (List<AdoptionRequest>) ViewData["AdoptionRequests"];
}

@*Adopton Request*@
<form method="post" name="myForm" onsubmit="return ValidateSelected()" >
    <h4 class="text-center text-uppercase">Your Adoption Requests</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Select</th>
                <th>Image</th>
                <th>Name</th>
                <th>Age</th>
                <th>Species</th>
                <th>Description</th>
                <th>Requested Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in adoptionRequests)
            {
                <tr>
                    <td><input type="radio" id=@request.AdoptionListing.AdoptionListingID name="selected" value="@request.AdoptionRequestId">
                        <input type="hidden" id="listingId" name="status" value="@request.requestStatus"></td>
                    <td>
                        <img src="~/images/@request.AdoptionListing.Image"
                             class="rounded-circle"
                             height="40" width="40"
                             asp-append-version="true" />
                    </td>
                    <td>@request.AdoptionListing.Name</td>
                    <td>@request.AdoptionListing.Age</td>
                    <td>@request.AdoptionListing.Species.ToString()</td>
                    <td>@request.Description</td>
                    <td>@request.RequestDate</td>
                    <td>@request.requestStatus </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Index"  asp-controller="ApplyAdoption" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Back to Adoption</a>&nbsp;&nbsp;
        <button type="submit" onsubmit="return ValidateSelected()" id="removeitem" asp-action="Remove" value="remove" class="btn btn-sm btn-primary rounded-0 text-uppercase"> Remove</button>&nbsp;&nbsp;
        <button type="submit" onsubmit="return ValidateSelected()" id="viewitem" asp-action="ViewMore" value="view more" class="btn btn-sm btn-primary rounded-0 text-uppercase"> View More</button>
    </p>
</form>

@section scripts{
    @*<script src="~/js/adjustRoute.js"></script>*@
    <script src="/js/ValidateAdoptionListing.js"></script>
}