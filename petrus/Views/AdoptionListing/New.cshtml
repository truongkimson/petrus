                                    class="form-control"
                                    asp-items="Html.GetEnumSelectList<Breed>()">
                                <option value="" disabled selected hidden>Select breed</option>
                            </select>
                            <span asp-validation-for="Breed1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Breed2" class="control-label"></label>
