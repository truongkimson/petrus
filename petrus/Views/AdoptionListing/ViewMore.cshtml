@{
    AdoptionListing listing = (AdoptionListing)ViewData["listing"];
    string val = "~/videos/" + (string)listing.Video;
}

<div class="container pt-3">
    <br />
    <div class="row">
        <div class="col-12 col-md-12 pb-1 text-left font-roboto text-left">
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
        </div>
    </div>
</div>
<form method="post">
    <div class="container pt-4">
        <div style="text-overflow: ellipsis; overflow: hidden;">
            <div class="row">
                <div class="col-12 col-md-6 text-left text-md-left">
                    <h1 class="primary-color font-roboto"><b>Adoption Listing - @listing.AdoptionListingID</b></h1>
                    <h2 class="primary-color font-roboto"><b>About @listing.Name</b></h2>
                </div>
                <br />
                <div class="col-12 col-md-6 text-left text-md-right pt-2">
                    <p class="card-title h5 font-roboto">
                        <span class="badge badge-pill badge-primary pt-2" style="height:30px; width:130px">@listing.ApplicationStatus.ToString()</span>
                    </p>
                </div>
            </div>
            <br />
            <div>
                <div class="container p-2">
                    <div class="row">
                        <div class="col-12 col-lg-12">
                            <div class="row" style="padding-bottom:25px">
                                <div class="col-12 col-md-12">
                                    <div class="row text-center">
                                        <video style="width:100%;" controls>
                                            <source src="@Url.Content(@val)" type="video/mp4" />
                                        </video>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-12 col-md-4 pb-1">
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Species: @listing.Species.ToString()</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Breed: @BreedExtensions.ToFriendlyString(listing.Breed1) &nbsp; @BreedExtensions.ToFriendlyString(listing.Breed2)</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Age: @listing.Age years old</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Color: @listing.Color1.ToString() &nbsp; @listing.Color2.ToString() &nbsp; @listing.Color3.ToString()</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Fur length: @listing.FurLength</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Maturity size: @listing.MaturitySize</h5>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4 pb-1">
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Health condition: @listing.Health.ToString()</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Vaccinated: @listing.Vaccinated.ToString()</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Sterilised: @listing.Sterilized.ToString()</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Dewormed: @listing.Dewormed.ToString()</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Quantity represented: @listing.QuantityRepresented</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="font-roboto">Fee: SGD @listing.Fee</h5>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-12 col-md-12 pb-1">
                                    <div class="row pl-2 text-center">
                                        @if (listing.Image != null)
                                        {
                                            <img src="~/images/@listing.Image" class="rounded" width="80%"/>
                                        }
                                        else
                                        {
                                            <img src="~/images/noimage2.png" class="rounded" width="80%" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
</form>
<br />
