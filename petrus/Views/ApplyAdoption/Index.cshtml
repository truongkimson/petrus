@model IEnumerable<AdoptionListing>

<div>
    <h1><b style="color: #2c3e50">Adoptions</b></h1>
    <h4>Find your new best friend.</h4>
</div>
<br />
<div class="row pb-3 backgroundWhite">
    @foreach (var listing in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border: 1px solid #012169; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="~/images/@listing.Image" class="card-img-top rounded" />
                        <div class="pl-1">
                            <br />
                            <p class="card-title h5"><b style="color: #012169">@listing.Name</b>
                            <span class="badge badge-info pt-2" style="height:30px;">@listing.ApplicationStatus</span></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>
                                @listing.Breed1
                                <br />
                                Color: @listing.Color1
                                <br />
                                Age: @listing.Age years old
                            </p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@listing.AdoptionListingID">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
