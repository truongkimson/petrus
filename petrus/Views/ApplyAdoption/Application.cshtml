@{
    AdoptionListing listing = (AdoptionListing)ViewData["listing"];
    User user = (User)ViewData["user"];
}

<br />
<form method="post" name="myForm" onsubmit="return ValidateForm()">
    <div class="container pt-4">
        <div style="text-overflow: ellipsis; overflow: hidden;">
            <div class="row">
                <div class="col-12 col-md-6 text-left text-md-left">
                    <h1 class="primary-color font-roboto"><b>Adopt @listing.Name</b></h1>
                </div>
                <br />
                <div class="col-12 col-md-6 text-md-right text-left pt-2">
                    <p class="card-title h5 font-roboto">
                        <span class="badge badge-pill badge-primary pt-2" style="height:30px; width:130px">@listing.ApplicationStatus</span>
                    </p>
                </div>
            </div>
            <br />
            <div>
                <div class="container p-2">
                    <div class="row">
                        <div class="col-12 col-lg-12">
                            <div class="row" style="padding-bottom:25px">
                                <div class="col-12 col-md-6 pb-1">
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Species: @listing.Species</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Breed: @listing.Breed1</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Age: @listing.Age years old</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Color: @listing.Color1</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Fur length: @listing.FurLength</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Maturity size: @listing.MaturitySize</h5>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 pb-1">
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Health condition: @listing.Health</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Vaccinated: @listing.Vaccinated</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Sterilised: @listing.Sterilized</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Dewormed: @listing.Dewormed</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Quantity represented: @listing.QuantityRepresented</h5>
                                    </div>
                                    <div class="row pl-3">
                                        <h5 class="font-roboto">Fee: SGD @listing.Fee</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            @*Actual form*@
            <div>
                <div class="container p-2">
                    <div class="row">
                        <div class="col-12 col-lg-12 col-md-12">
                            <div class="row pl-2">
                                <h3 class="font-roboto primary-color"><b>Application Form</b></h3>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-12 pb-3 pt-3">
                                    <div class="row">
                                        <div class="col-12 col-md-6 pt-1 pt-md-3">
                                            <h5 class="font-roboto">Applicant Name:</h5>
                                        </div>
                                        <div class="col-12 col-md-6 pt-md-3">
                                            <h5 class="font-roboto">@user.Name</h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-6 pt-1 pt-md-3">
                                            <h5 class="font-roboto">Type of Residence:</h5>
                                        </div>
                                        <div class="col-12 col-md-6 pt-md-3">
                                            <h5 class="font-roboto">
                                                <input type="radio" class="text-muted" id="hdb" name="residenceType" value="@Residence.HDB">
                                                <label for="hdb">HDB</label>
                                                &nbsp;
                                                <input type="radio" class="text-muted" id="private" name="residenceType" value="@Residence.Private">
                                                <label for="private">Private</label>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-6 pt-1 pt-md-3">
                                            <h5 class="font-roboto">
                                                Number of @listing.Species Owned:
                                            </h5>
                                        </div>
                                        <div class="col-12 col-md-6 pt-md-3">
                                            <h5 class="font-roboto">
                                                <input type="radio" class="text-muted" id="0" name="dogsOwned" value="0">
                                                <label for="0">0</label>
                                                &nbsp;
                                                <input type="radio" class="text-muted" id="1" name="dogsOwned" value="1">
                                                <label for="1">1</label>
                                                &nbsp;
                                                <input type="radio" class="text-muted" id="2" name="dogsOwned" value="2">
                                                <label for="2">2</label>
                                                &nbsp;
                                                <input type="radio" class="text-muted" id="3" name="dogsOwned" value="3">
                                                <label for="3">3</label>
                                                &nbsp;
                                                <input type="radio" class="text-muted" id="3more" name="dogsOwned" value="4">
                                                <label for="3more">	&gt; 3</label>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-6 pt-1 pt-md-3">
                                            <h5 class="font-roboto">
                                                Tell us what adopting @listing.Name would mean to you:
                                            </h5>
                                        </div>
                                        <div class="col-12 col-md-6 pt-md-3">
                                            <input type="text" class="form-control" id="description" name="description" style="width: 100%; height: 40px" placeholder="Short Write Up">
                                            <label for="description"></label>
                                        </div>
                                    </div>
                                    <div> <input type="hidden" id="listingId" name="listingId" value="@listing.AdoptionListingID"> </div>
                                    <div class="row">
                                        <div class="col-12 col-md-12 pt-1 pt-md-3">
                                            <h5 class="font-roboto">
                                                <input type="checkbox" id="acceptConditions" name="acceptConditions" value="Accept">
                                                <label for="acceptConditions">I fully understand the conditions required to own a dog in Singapore and have fulfilled all the requisites. </label><br>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-12 pt-1 pt-md-1">
                                            <h5 class="font-roboto">
                                                <a href="https://www.hdb.gov.sg/residential/living-in-an-hdb-flat/keeping-pets" target="_blank">HDB Approved Small Breeds</a>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-12">
                                            <h5 class="font-roboto">
                                                <a href="https://www.nparks.gov.sg/avs/pets/owning-a-pet/licensing-a-pet/dog-licensing" target="_blank">NParks Dogs Licensing</a>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div>
                <div class="row">
                    <div class="col-12 col-md-6 pb-1 text-left font-roboto">
                        <a asp-action="Details" asp-route-id="@listing.AdoptionListingID" class="details-button btn btn-primary form-control btn-square btn-lg" style="height:50px;"><b>Back</b></a>
                    </div>
                    <div class="col-12 col-md-6 pb-1 text-right font-roboto">
                        <button type="submit" asp-action="ApplyAdoptionResult" onsubmit="return ValidateForm()" value="Apply Adoption" class="details-button btn btn-primary btn-square btn-lg form-control" style="height:50px;"><b>Apply Adoption</b></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<br />

@section Scripts {
    <script src="/js/ValidateAdoptionApplication.js"></script>
    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}