@{
    AdoptionListing listing = (AdoptionListing)ViewData["listing"];
    string acceptance = (string) ViewData["reject"];
    string request = (string) ViewData["description"];
    AdoptionRequest adoptionRequest = (AdoptionRequest) ViewData["request"];
}

<form method="post">
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary"><b style="color: #012169">@listing.Name</b></h1>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-3">
                    <p class="card-title h5">
                        <span class="badge badge-info pt-2" style="height:30px; width:100px">@listing.ApplicationStatus</span>
                    </p>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-12">
                            <div class="row">
                                <div class="col-12 col-md-6 pb-1">
                                    <div class="row pl-2">
                                        <h5 class="text-muted">Species: @listing.Species</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="text-muted">Breed: @listing.Breed1</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="text-muted">Age: @listing.Age</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="text-muted">Color: @listing.Color1</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="text-muted">Fur Length: @listing.FurLength</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h5 class="text-muted">Maturity size: @listing.MaturitySize</h5>
                                    </div>
                                    <div class="row pl-2">
                                        <h1 class="text-muted">@acceptance </h1>
                                    </div>
                                       
                                    <div class="row pl-2">
                                        <h5 class="text-muted">Request: @request</h5>
                                    </div>
                                    @if (adoptionRequest.Description != null)
                                    {
                                        <div class="row pl-2">
                                            <h5 class="text-muted">Request: @adoptionRequest.Description</h5>
                                        </div>
                                    }
                                    

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" asp-action="Application" asp-route-id="@listing.AdoptionListingID" value="Apply Adoption" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Apply Adoption</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
